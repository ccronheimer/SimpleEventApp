<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rounded_corner"
    android:layout_marginBottom="10dp">


    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/titleoutput"
    android:textSize="20dp"
    android:text="My Event"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleoutput"
        android:text="Date:"
        android:gravity="left"
        android:textColor="#AB000000"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/dateoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleoutput"
        android:text="my Date"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateoutput"
        android:text="Time:"
        android:gravity="left"
        android:textColor="#AB000000"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/timeoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateoutput"
        android:text="my time"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeoutput"
        android:text="Location:"
        android:gravity="left"
        android:textColor="#AB000000"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/locationoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeoutput"
        android:text="my location"
        android:gravity="center"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/deletebtn"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:text="X"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:backgroundTint="#FF4F4F"
       />

</RelativeLayout>